<p>
  <%= @artist.name %>
</p>

<p>
  <%= @artist.country %>
</p>

<h2>Songs</h2>
<%= @artist.songs.each do |song| %>
    <%= song.cover %>
    <%= song.album %>
    <%= song.year %>
    <%= song.ylink %>
<% end %>

<h2>Add a song</h2>
<%= form_for([@artist, @artist.songs.build]) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <h4>Upload album cover</h4>
    <%= f.label :cover %>
    <%= f.text_field :cover %><br>
  </p>
  <p>
    <%= f.label :album %>
    <%= f.text_field :album %><br>
  </p>
  <p>
    <%= f.label :year %>
    <%= f.text_field :year %><br>
  </p>
  <p>
    <h4>Add Youtube Link here</h4>
    <%= f.label :ylink %>
    <%= f.text_field :ylink %><br>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artist_path %>
