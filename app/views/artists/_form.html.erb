<%= form_for Artist.new do |f| %>

<div class="form-group">
       <%= f.label :name %>
       <%= f.text_field :name, class: "form-control", placeholder: ". . ." %>
    </div>

    <div class="form-group">
       <%= f.label :country %>
       <%= f.text_field :country, class: "form-control", placeholder: ". . ."   %>
    </div>


    <%= f.submit (Artist.new.new_record? ? "Create" : "Update"), class: "form-control btn-primary" %>

<% end %>
